from sys import argv
import random



print(random.randint(0,10)) 
script, name = argv

randomwords = ["Ball", "Headset", "Headphones", "Headband", "Pillow", "Bed", "Case", "Paper", "Lotion", "Sanitizer" ]
random_array_items = random.choice(randomwords)
print(random_array_items)
while True:
    print(f"Hello {name} Welcome to the random word generator")

    numbergen = input("Pick a number between 1 and 10: ")


    if numbergen == "1":
        print("Merveille")
        print(numbergen[(random.randint(0,9))])
    
    elif numbergen == "2":
        print("Bodyspray")

    elif numbergen == "3":
        print("Axe")

    elif numbergen == "4":
            print("Deodorant")

    elif numbergen == "5":
        print("Nurse")

    elif numbergen == "6":
        print("Apple")

    elif numbergen == "7":
        print("Olives")

    elif numbergen == "8":
        print("Patronize")

    elif numbergen == "9":
        print("Clock")

    elif numbergen == "10":
        print("Alarm")
        
    break
else:
    print("Invalid Input, Have a Good Day.")

