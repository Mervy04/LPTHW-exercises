from sys import argv

script, user_name = argv
prompt = '>' # later used as a part of the User input.

print(f"Hi {user_name}, I'm the {script} script.")
print(f"I'd like to ask you a few questions.")
print(f"Do you like me {user_name}?")

likes = input(prompt) # puts '>' before the user input to make the UI cleaner.

print(f"Where do you live {user_name}?")
lives = input(prompt)

print("What kind of computer do you have?")
computer = input(prompt)

Car = input("What car do you drive?")
School = input("What school do you go to?")
print(f"What's your favourite sport {user_name}")
Sport = input(prompt)


print(f""" 
Alright, so you said {likes} about liking me.
You live in {lives}. Not sure where that is.
You have a {computer} computer.
You attend {School} school.
Your favourite sport is {Sport}
And you drive a {Car} as a car. """)
